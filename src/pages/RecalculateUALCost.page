    <script>
        $(document).ready(function(){

            $(document.getElementById("openUASActionTable")).find("tbody").disableSelection();

            $("#msg").toggle();

            $(document.getElementById("openUASActionTable")).find("tbody").sortable
            (
                {
                    update: function(event, ui)
                    {
                        init();
                        $("#msg").toggle();
                        var result = $(this).sortable('toArray');
                        length = result.length;
                        var UASList = new Array();

                        for( i=0; i < length; i++)
                        {
                            var uas = new sforce.SObject("Utility_Account_Subscription__c");
                            console.log("result:");
                            console.log(JSON.stringify(result[i]));
                            uas.id = result[i];
                            uas.Custom_Deduction_Order__c = i+1;
                            UASList.push(uas);
                            
                            if ((i>0 && i%30 == 0) || i+1 == length)
                            {
                                final = sforce.connection.update(UASList);
                                UASList = [];
                            }
                        }

                        location.reload();

                        $("#msg").toggle();
                    }
                }
            )

            $("#sortable").disableSelection();

            function init()
            {
                sforce.connection.sessionId = '{!$Api.Session_ID}';
            }
        });
    </script>
