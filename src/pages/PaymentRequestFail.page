<apex:page showheader="false" standardStylesheets="true" id="page"> 
  <apex:outputPanel id="header" layout="block" style="background-color: #266092;  position: sticky; height:100%;">
    <style type="text/css">
      .footer {
        text-align: center;
        margin-top:40px;
        color: black;
        font-size: 14px;
        position: sticky;
        bottom:0;
        width: 100%;
        font-family: Helvetica; 
        border-top: 1px solid lightgray;
        color: #ffffff;
        background-color: #266092; 
      }
      .footertext {
        line-height: 20px;
        color: #ffffff;
        font-family: Helvetica; 
        background-color: #266092; 
      }
    </style> 
    <br></br>
      <apex:image value="{!$Resource.WhiteLogo}" width="35%" style="background-color: #266092; display: block; margin: auto; margin-bottom: 10px;"/>
        <apex:pageMessage summary="Unfortunately, that payment data did not work. Please either re enter the information or use a different payment source." severity="error" strength="3" />
    <script type="text/javascript">
        var msgBlock = document.getElementsByClassName('messageText')[0];
        var a = document.createElement("a");
        a.href = document.referrer;
        a.style.fontSize = '100%';
        a.style.margin = '0px';
        a.appendChild(document.createTextNode('Click here to get back'));
        msgBlock.appendChild(a);
    </script>
    <apex:outputPanel layout="block" styleclass="footer">
        <apex:outputText value="BlueWave Solar  | 137 Newbury Street, 4th Floor  |  Boston, MA 02114" 
                      styleClass="footertext"/>
        <br></br>
        <apex:outputText value="Have a question? Please email customercare@bluewavesolar.com or call (844) 786-4100 to access our Customer Care team." 
                      styleClass="footertext"/>
    </apex:outputPanel>
  </apex:outputPanel>
</apex:page>