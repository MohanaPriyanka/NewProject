<apex:page tabstyle="dsfs__DocuSign_Status__c" controller="dsfs.DocuSignConsoleController" action="{!RefreshDocuSign}">
    <apex:includeScript value="{!$Resource.dsfs__UtilJS}"/>
    <apex:form >
        <apex:outputLabel rendered="{!LEN(ConsoleError)>0}" value="{!ConsoleError}" style="font-weight: bold"/>
        <apex:outputPanel rendered="{!LEN(ConsoleURL)>0}">
        {!$Label.dsfs__ifyouseethedocusignloginscreen}
            <apex:commandLink action="{!RefreshDocuSign}"
                              value="{!$Label.dsfs__clickheretoreconnect}"/>
            .
        </apex:outputPanel>
        <apex:iframe id="ds-iframe" rendered="{!LEN(ConsoleURL)>0}" src="{!ConsoleURL}" height="768" scrolling="true"/>
    </apex:form>
</apex:page>