<!-- 
     This component should have attributes and methods in the helper that are generic and possibly useful
     for all custom lightning components.
  -->
<aura:component extensible="true" abstract="true" controller="BlueWaveParent">
  <aura:handler event="aura:systemError" action="{!c.handleSystemError}"/>
  <aura:registerEvent name="apexErrorEvent" type="c:ApexCallbackError"/>
  {!v.body}
</aura:component>