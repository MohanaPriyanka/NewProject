<aura:component implements="forceCommunity:availableForAllPageTypes" extends="c:BlueWaveParent" access="global">
	<aura:attribute name="icon" type="String" />
	<aura:attribute name="assistiveText" type="String" />
	<aura:attribute name="inputAuraId" type="String"/>
	<aura:attribute name="inputValue" type="String"/>
	<aura:attribute name="toolTipAuraId" type="String"/>
	<aura:attribute name="buttonPixelsTop" type="String" />	
	<aura:attribute name="buttonPixelsLeft" type="String" />
	<aura:attribute name="toolTipPixelsTop" type="String" />	
	<aura:attribute name="toolTipPixelsLeft" type="String" />	
	<aura:attribute name="helpText" type="String" />
	<style>
		@font-face {
		font-family: proximaNovaFont;
		src: url('{!$Resource.ProximaNova}');
		}
		.proximaNovaBlue {
		font-family: proximaNovaFont;   
		font-size:100%;
		color: #1c5a7d;
		}                
		.proximaNovaStream {
		font-family: proximaNovaFont;   
		font-size:100%;
		color: #00AFA9;
		}    		
		.proximaNovaWhite {
		font-family: proximaNovaFont;   
		font-size:100%;
		color: #FFFFFF;
		}        
	</style> 	
		<div class="slds-form-element">
			<div class="slds-form-element__icon slds-align-middle">
				<button class="slds-button slds-button_icon slds-button slds-button_icon" aria-describedby="help" title="Help" onfocus="{!c.showHelp}" onblur="{!c.hideHelp}" style="{!'position:absolute; top:' + ' ' +  (v.buttonPixelsTop) + '; left:' + ' ' + (v.buttonPixelsLeft) + ';'}" >
					<lightning:icon iconName="{!v.icon}" size="xx-small"/>
					<span class="slds-assistive-text">"{!v.assistiveText}"</span>
				</button>
			</div>
		</div>
		<div aura:id="helpTextBubble" class="slds-popover slds-popover_tooltip slds-nubbin_bottom-left noDisplay" role="tooltip" id="help" style="{!'position:absolute; top:' + ' ' +  (v.toolTipPixelsTop) + '; left:' + ' ' + (v.toolTipPixelsLeft) + ';'}">
			<div class="slds-popover__body slds-text-longform proximaNovaWhite">{!v.helpText}</div>
		</div>
</aura:component>