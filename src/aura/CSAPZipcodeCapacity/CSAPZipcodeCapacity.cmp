<aura:component controller="CSAPController" access="global" extends="c:CSAPParent" implements="forceCommunity:availableForAllPageTypes">
  <aura:attribute name="hasCapacity" type="boolean" default="false" />
  <aura:attribute name="zipcode" type="string"/>
  <div aria-labelledby="zipForm">
      <form class="slds-form--stacked">
        <lightning:layout horizontalAlign="center" multipleRows="true">
          <lightning:layoutItem size="2" smallDeviceSize="2" mediumDeviceSize="2"  >
            <!--pressing enter inside an aura input refreshes the page!-->
            <span onkeypress="{!c.keyCheck}">
            <lightning:input aura:id="field" name="zip"
                             label="ZIP Code:"
                             class="slds-align_absolute-center"
                             value="{!v.zipcode}"
                             required="true"
                             maxlength="5"
                             minlength="5"
                             messageWhenBadInput="Please enter a 5 digit zip-code"/>
            </span>
          </lightning:layoutItem>
        </lightning:layout>
        <lightning:layout horizontalAlign="end"  multipleRows="true">
          <lightning:layoutItem padding="small" size="6" >
            <lightning:button label="Submit"
                              variant="neutral"
                              class="slds-float_right"
                              onclick="{!c.onSubmit}"/>
          </lightning:layoutItem>
        </lightning:layout>
      </form>
  </div>
</aura:component>