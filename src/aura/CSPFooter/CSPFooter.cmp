<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
  <aura:attribute name="customerCareEmailAddress" type="String" default="{!$Label.c.Email_Customer_Care}"/>

  <div class="slds-p-top_x-large slds-align_absolute-center">
    <ul class="slds-size_5-of-12">
      <hr/>
    </ul>
  </div>
  <footer class="slds-p-bottom_large slds-text-body_small">
    <div class="slds-align_absolute-center">
        <a href="{!'mailto:' + v.customerCareEmailAddress}">
          <lightning:formattedText class="slds-text-color_weak" value="{!v.customerCareEmailAddress}"/>
        </a>
    </div>
  </footer>
</aura:component>