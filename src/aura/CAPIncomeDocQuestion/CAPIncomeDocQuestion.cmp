<aura:component description="CAPIncomeDocQuestion" access="global" extends="c:CAPParent">
  <aura:attribute name="questionType" type="String"/>
  <aura:attribute name="singleQuestion" type="String"/>
  <aura:attribute name="jointQuestion" type="String"/>
  <aura:attribute name="singleAffirmative" type="String"/>
  <aura:attribute name="jointAffirmative" type="String"/>
  <aura:attribute name="singleNegative" type="String"/>
  <aura:attribute name="jointNegative" type="String"/>
  <aura:attribute name="affirmativeValue" type="Boolean"/>
  <aura:attribute name="negativeValue" type="Boolean"/>
  <aura:attribute name="isJoint" type="Boolean"/>
  <aura:handler name="change" value="{!v.affirmativeValue}" action="{!c.affirmativeChange}" />
  <aura:handler name="change" value="{!v.negativeValue}" action="{!c.negativeChange}" />

  <div class="slds-m-left_small">
    <aura:if isTrue="{!v.isJoint}">
      <label class="slds-form-element__label slds-text-heading--medium"><b>{!v.jointQuestion}</b></label>
      <aura:set attribute="else">
        <label class="slds-form-element__label slds-text-heading--medium "><b>{!v.singleQuestion}</b></label>
      </aura:set>
    </aura:if>
    <fieldset class="slds-form-element">
      <div class="slds-form-element__control">
        <span class="slds-radio">
          <aura:if isTrue="{!v.isJoint}">
            <lightning:input type="radio" label="{!v.jointAffirmative}" name="" value="{!v.affirmativeValue}" checked="{!v.affirmativeValue}"/>
            <aura:set attribute="else">
             <lightning:input type="radio" label="{!v.singleAffirmative}" name="" value="{!v.affirmativeValue}" checked="{!v.affirmativeValue}"/>
            </aura:set>
          </aura:if>
        </span>
        <span class="slds-radio">
          <aura:if isTrue="{!v.isJoint}">
            <lightning:input type="radio" label="{!v.jointNegative}" name="" value="{!v.negativeValue}" checked="{!v.negativeValue}"/>
            <aura:set attribute="else">
             <lightning:input type="radio" label="{!v.singleNegative}" name="" value="{!v.negativeValue}"  checked="{!v.negativeValue}"/>
            </aura:set>
          </aura:if>
        </span>
      </div>
    </fieldset>
  </div>
</aura:component>
