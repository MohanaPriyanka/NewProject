<aura:component implements="forceCommunity:availableForAllPageTypes" controller="CSAPController" access="global" extends="c:CSAPParent">
    <aura:attribute name="loading" type="Boolean" default="true"/>
    <aura:attribute name="loadingText" type="String" default="Generating contracts"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <aura:if isTrue="{!v.loading}">
        <div class="slds-icon-eq slds-is-animated slds-align_absolute-center slds-p-top_medium" title="Loading">
            <div class="slds-icon-eq__bar"></div>
            <div class="slds-icon-eq__bar"></div>
            <div class="slds-icon-eq__bar"></div>
            <span class="slds-assistive-text">Loading</span>
        </div>
        <div class="slds-text-body--regular slds-align_absolute-center">
            {!v.loadingText}
        </div>
    </aura:if>
</aura:component>