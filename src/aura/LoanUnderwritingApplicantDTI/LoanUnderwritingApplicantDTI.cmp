<aura:component extends="c.BlueWaveParent">
  <aura:attribute name="pcr" type="LASERCA__Personal_Credit_Report__c"/>

  <div>
    <div class = "slds-grid slds-wrap slds-grid--vertical-stretch">
      <div class = "lightCell slds-col slds-size--1-of-2">
        DTI Before:
        <br></br>
        <aura:if isTrue="{!v.pcr.DTI_Before__c!=null}">
          <ui:outputText value="{!v.pcr.DTI_Before__c}"/>%
          <aura:set attribute="else">-</aura:set>
        </aura:if>
      </div> 
      <div class = "lightCell slds-col slds-size--1-of-2">
        DTI After:
        <br></br>
        <aura:if isTrue="{!v.pcr.DTI_After__c != null}">
          <ui:outputText value="{!v.pcr.DTI_After__c}"/>%
          <aura:set attribute="else">-</aura:set>
        </aura:if>
      </div> 
    </div>
  </div>
</aura:component>