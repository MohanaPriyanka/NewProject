<aura:component implements="forceCommunity:availableForAllPageTypes" controller="MyAccountController">
  <aura:attribute name="referCode" type="String"/>
  <aura:attribute name="referralURL" type="String"/>
  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div class="slds-grid slds-gutters slds-grid_vertical-align-start">
      <div class="slds-col slds-size_1-of-6"/>
      <div class="slds-col slds-size_4-of-6">
        <div class="slds-text-heading_large slds-p-top_large"><b>Refer a Friend</b></div>
        <div class="slds-text-heading_small slds-p-top_large">Share A URL</div>
        <div class="slds-text-body_regular slds-p-top_small">
          Help your friends save with BlueWave Community Solar by sharing your custom referral URL. For every friend that signs up with your referral URL, <b>you will receive $100!</b>
        </div>
        <h3 class="slds-p-top_large slds-p-bottom_small slds-align--absolute-center">
          <b>
            <div class ="slds-form-element slds-align--absolute-center slds-text-color_weak">Copy the URL below and send it<br> </br> </div>
            <div class ="slds-form-element slds-align--absolute-center slds-text-color_weak">to your friends via Email, Facebook, Twitter, etc!</div>
            <br></br>
              <div class="slds-text-body_small slds-align--absolute-center slds-text-color_default slds-col slds-size_4-of-6">
                  <span style="text-align:center; font-weight:normal" >{!v.referralURL}
                  </span>
              </div>
          </b>
        </h3>
        <div class="slds-text-heading_small slds-p-top_large">Send an Email</div>
        <div class="slds-text-body_regular slds-p-top_small">
          Type an email address in the box below and hit “send” to share information about BlueWave Community Solar and your custom referral URL with friends.
        </div>
        <div class="slds-col slds-size_3-of-6 slds-p-top_small slds-p-bottom_small slds-align--absolute-center">
            <ui:inputEmail aura:id="email" class="slds-form-element"/>
        </div>
        <div class="slds-col slds-size_3-of-6 slds-p-bottom_small slds-align--absolute-center">
          <b><ui:outputText aura:id="emailstatus" class="emailmsg" value=""/></b>
        </div>
        <lightning:button label="Send Email"
                          onclick="{!c.sendEmailFunc}"
                          class="slds-text-body_small slds-button--brand slds-align--absolute-center"/>        
      </div>
      <div class="slds-col slds-size_1-of-6"/>
    </div>
</aura:component>