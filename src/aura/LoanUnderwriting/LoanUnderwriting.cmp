<table border="1">
      <tr>  
        <td>
            Adjusted DTI:
        </td>
        <td>
        </td>
      </tr> 
      <tr>  
        <td>
          DTI After: <ui:outputText value="{!v.lead.Personal_Credit_Report__r.DTI_After__c}"/>
        </td>
        <td>
          DTI Before: <ui:outputText value="{!v.lead.Personal_Credit_Report__r.DTI_Before__c}"/>
        </td>
      </tr> 
      <tr>
        <td> 
          DTI After Notes:
        </td>
        <td>
        </td>
      </tr>
    <!-- </aura:iteration> -->
  </table>

  <br></br>
  <br></br>
  <br></br>
  <br></br>
  <br></br>
  <br></br>
  <br></br>

 <div class = "slds-box slds-box_small slds-align_absolute-center slds-size_1-of-2">
       Debt
     </div>
  <br></br>
<table border="1">
      <tr>  
        <td>
            Monthly Personal Debt:   
        </td>
        <td>
            Adjusted Monthly Personal Debt:
        </td>
      </tr> 
      <tr>  
        <td> 
        </td>
        <td>
            Adjusted Personal Debt Notes: 
        </td>
      </tr> 
      <tr>
        <td> 
          Total Debt:
        </td>
        <td>
