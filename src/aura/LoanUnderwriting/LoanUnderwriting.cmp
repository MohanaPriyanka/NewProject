    <aura:iteration items="{!v.lead.Attachments}" var="attachment" >
      <tr>  
        <td>
          <ui:outputURL value="{!'/servlet/servlet.FileDownload?file=' + attachment.Id}" label="{!attachment.Name}" target="_blank"/>
        </td>
      </tr>  
    </aura:iteration> 
