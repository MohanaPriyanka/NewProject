    <div aura:id = "taskTable" class="main2"> 
		<br></br>
      <div>
        <table class="slds-table slds-table--bordered  slds-table--striped box proximaNovaBlack">
          <thead>
            <tr class="slds-text-heading--label proximaNovaBWBlueTable " >
              <th scope="col"><span class="slds-truncate"><b>Customer</b></span></th>   
              <th scope="col"><span class="slds-truncate"><b>Product</b></span></th>              
              <th scope="col"><span class="slds-truncate"><b>Task</b></span></th>              
              <th scope="col"><span class="slds-truncate"><b>View</b></span></th>              
           
              </tr>
          </thead>
          <tbody>
 			<aura:iteration items="{!v.partnerTaskList}" var="task">
              		<tr>
                		<th scope="row"> <b>{!task.Lead__r.Name}</b> </th>
                        <th scope="row"> <b>{!task.Loan__r.Product__r.Name}</b> </th>
                		<th scope="row"> <b>{!task.Name}</b> </th>   
                		<th><ui:button label="View"
                           class="{!task.Loan__r.Id}"
                           labelClass="label"
                           press="{!c.openCustomerWindow}"/>   </th>                       
                    </tr>                    
            </aura:iteration> 
         
          </tbody>
        </table>
