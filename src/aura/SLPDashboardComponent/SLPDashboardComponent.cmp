<aura:component implements="forceCommunity:availableForAllPageTypes" controller="SLPDashboardHandler">
    <aura:attribute name="loanList" type="List" />
    <aura:attribute name="taskList" type="Object"  /> 
    <aura:attribute name="partnerTaskList" type="Object"  /> 
    <aura:attribute name="taskBoardRecords" type="Map" />  
    <!--<aura:attribute name="eventToggle" type="Boolean" default="true" />  -->
	<aura:registerEvent name="customerWindow" type="c:SLPDashboardEvent"/>     
    <aura:handler event="c:SLPStageChartEvent" action="{!c.filterStageList}" />  
	<aura:handler event="c:SLPCustomerEvent" action="{!c.closeCustomerWindow}" />     
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />  
