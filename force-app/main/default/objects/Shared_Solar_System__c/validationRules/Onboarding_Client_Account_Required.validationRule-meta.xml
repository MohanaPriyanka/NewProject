<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Onboarding_Client_Account_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Stage__c),
ISPICKVAL(Stage__c,&quot;Onboarding&quot;),
OR(ISBLANK(Client_Account__c),ISPICKVAL(CS_Services_Type__c,&quot;&quot;))
)</errorConditionFormula>
    <errorMessage>Cannot change status to onboarding without linking an SSS to a client account and setting the CS Services Type field</errorMessage>
</ValidationRule>
