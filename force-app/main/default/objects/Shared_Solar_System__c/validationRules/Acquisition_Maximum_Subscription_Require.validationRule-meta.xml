<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Acquisition_Maximum_Subscription_Require</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Stage__c),
ISPICKVAL(Stage__c,&quot;Acquisition&quot;),
OR (
Maximum_Subscription_Capacity_kWDC__c = 0,
ISBLANK(Maximum_Subscription_Capacity_kWDC__c)
)
)</errorConditionFormula>
    <errorMessage>Cannot change status to acquisition without populating the Maximum Subscription KW DC field</errorMessage>
</ValidationRule>
