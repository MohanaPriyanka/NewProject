<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:n1="http://www.w3.org/2001/XMLSchema-instance">
    <fullName>Acquisition_Client_Gateway_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Stage__c,&quot;Acquisition&quot;),
NOT(ISBLANK(Client_Account__c)),
ISBLANK(Client_Account__r.Payment_Gateway__c),
NOT(UCB__c)
)</errorConditionFormula>
    <errorMessage>When in the Acquisition stage, a non-UCB Shared Solar System&apos;s Client Account must have a Payment Gateway set</errorMessage>
</ValidationRule>
