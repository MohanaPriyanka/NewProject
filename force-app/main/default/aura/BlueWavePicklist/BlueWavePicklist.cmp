<aura:component access="global">
	<aura:attribute name="options" type="List"/>
	<aura:attribute name="selectedOption" type="String"/>
	<aura:attribute name="value" type="String"/>
	<aura:attribute name="label" type="String"/>
	<aura:attribute name="default" type="String"/>
	<aura:handler name="change" value="{!v.options}" action="{!c.setDefaultValue}"/>
	<label class="slds-form-element__label" for="picklist">{!v.label}</label>
	<div class="slds-form-element__control">
		<div class="slds-select_container">
			<select class="slds-select" id="picklist" onchange="{!c.setValue}">
				<aura:iteration items="{!v.options}" var="option">
					<option>{!option}</option>
				</aura:iteration>
			</select>
		</div>
	</div>
</aura:component>