<?xml version="1.0" encoding="UTF-8"?>

<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    
    <active>false</active>
    
    <allowRecall>true</allowRecall>
    
    <allowedSubmitters>
        
        <type>creator</type>
        
    </allowedSubmitters>
    
    <allowedSubmitters>
        
        <submitter>BFG</submitter>
        
        <type>role</type>
        
    </allowedSubmitters>
    
    <allowedSubmitters>
        
        <submitter>BFG_Admin</submitter>
        
        <type>role</type>
        
    </allowedSubmitters>
    
    <allowedSubmitters>
        
        <submitter>BFG_Admin_II</submitter>
        
        <type>role</type>
        
    </allowedSubmitters>
    
    <allowedSubmitters>
        
        <submitter>CEO</submitter>
        
        <type>role</type>
        
    </allowedSubmitters>
    
    <allowedSubmitters>
        
        <submitter>Executive_Team</submitter>
        
        <type>role</type>
        
    </allowedSubmitters>
    
    <allowedSubmitters>
        
        <submitter>Founders</submitter>
        
        <type>role</type>
        
    </allowedSubmitters>
    
    <approvalPageFields>
        
        <field>Title</field>
        
        <field>CreatedDate</field>
        
        <field>IsVisibleInApp</field>
        
        <field>IsVisibleInPkb</field>
        
        <field>IsVisibleInCsp</field>
        
        <field>IsVisibleInPrm</field>
        
    </approvalPageFields>
    
    <approvalStep>
        
        <allowDelegate>true</allowDelegate>
        
        <assignedApprover>
            
            <approver>
                
                <name>Customer_KB_Approvals</name>
                
                <type>queue</type>
                
            </approver>
            
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
            
        </assignedApprover>
        
        <entryCriteria>
            
            <criteriaItems>
                
                <field>Knowledge__kav.IsVisibleInCsp</field>
                
                <operation>equals</operation>
                
                <value>True</value>
                
            </criteriaItems>
            
        </entryCriteria>
        
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        
        <label>Step 1</label>
        
        <name>Step_1</name>
        
    </approvalStep>
    
    <emailTemplate>Product_Team/Article_Approval_Request</emailTemplate>
    
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    
    <finalApprovalActions>
        
        <action>
            
            <name>Publish_Articles</name>
            
            <type>KnowledgePublish</type>
            
        </action>
        
        <action>
            
            <name>Update_to_Approved</name>
            
            <type>FieldUpdate</type>
            
        </action>
        
    </finalApprovalActions>
    
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    
    <finalRejectionActions>
        
        <action>
            
            <name>Approval_Rejected</name>
            
            <type>FieldUpdate</type>
            
        </action>
        
    </finalRejectionActions>
    
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    
    <initialSubmissionActions>
        
        <action>
            
            <name>Update_to_Pending_Approval</name>
            
            <type>FieldUpdate</type>
            
        </action>
        
    </initialSubmissionActions>
    
    <label>Submit for Publishing Approval</label>
    
    <recordEditability>AdminOnly</recordEditability>
    
    <showApprovalHistory>true</showApprovalHistory>
    
</ApprovalProcess>
