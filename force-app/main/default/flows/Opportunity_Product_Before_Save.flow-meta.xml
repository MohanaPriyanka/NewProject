            <value>
                <stringValue>kWh</stringValue>
            </value>
        </filters>
        <filters>
            <field>Unit_of_Measure__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>MW</stringValue>
            </value>
        </filters>
