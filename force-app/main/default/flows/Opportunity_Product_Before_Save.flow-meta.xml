        <locationX>176</locationX>
        <locationY>311</locationY>
        <assignmentItems>
            <assignToReference>$Record.UnitPrice</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>ffSellingPrice</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.Product_Family__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.Product2.Family</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <formulas>
        <name>ffSellingPrice</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.UOM_Based_Price__c} *
CASE({!$Record.Product2.QuantityUnitOfMeasure},
&apos;W&apos;,1000,
&apos;MW&apos;,0.001,
1)</expression>
        <scale>6</scale>
    </formulas>
    <interviewLabel>Before Save: Opportuntiy Product {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity Product: Before Save</label>
