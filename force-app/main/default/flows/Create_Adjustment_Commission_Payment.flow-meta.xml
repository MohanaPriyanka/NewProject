IF({!Get_RecordId_Type} = &apos;Commission_Payment__c&apos;,  
  MID({!Get_Commission_Payment.Name}, FIND(&quot;-&quot;, {!Get_Commission_Payment.Name}, 0) + 2, LEN({!Get_Commission_Payment.Name})),
  {!Get_Invoice.Name}
)</expression>
